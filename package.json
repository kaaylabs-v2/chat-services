{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "A chat application",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "prestart": "npm run build"
  },
  "keywords": [
    "chat",
    "application"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "mongoose": "^6.0.11",
    "node-fetch": "^3.3.1",
    "socket.io": "^4.6.2"
  },
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.13",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^16.9.4",
    "typescript": "^4.4.3"
  }
}
